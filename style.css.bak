
:root {
    --gray15: #242424;       /*  - main background */
    --sand: #FDF7E7;         /* pale sand -  ? */
    --forest: #6EA07D;       /* forest green - section bg, button */
    --moss: #e5e194;         /* mossy gold - accent, highlight */
    --earth: #7F6B48;        /* earth brown - accent, heading, or border */
    --bark: #3e321c;         /* bark/dark brown - nav, overlay */
    --pine: #122221;         /* deep forest/pine - dark accent */
    --overlay-black: rgba(18,34,33,0.55); /* overlay for images */
    --text-main: #222;       /* main text, dark brown */
}

/* ============================= BASE LAYOUT ============================ */
body {
    margin: 0;
    padding: 0;
    font-family: 'Raleway', Arial, sans-serif;
    background-color: var(--gray15);
    color: var(--text-main);
}

/* ============================ TOP NAV BAR ============================= */
.topbar {
    width: 100vw;                        /* Make the bar span the entire width of the viewport */
    background: var(--gray15);           /* Use the custom 15% gray background color */
    color: var(--moss);                  /* Use mossy gold for the text color */
    font-size: 1.1rem;                   /* Set the font size for nav text */
    padding: 0.6rem 1.5rem;              /* Space inside nav: top/bottom .6rem, left/right 1.5rem */
    box-sizing: border-box;              /* Include padding in the element's total width */
    display: flex;                       /* Use flex layout for easy horizontal alignment */
    align-items: center;                 /* Vertically center items inside nav */
    min-height: 24px;                    /* Make sure the nav is at least 24px tall */
    font-weight: 300;                    /* Lighten the nav text */
    letter-spacing: 0.03em;              /* Slight space between nav letters for style */
    position: sticky;                    /* Make the nav bar stay at the top when scrolling */
    top: 0;                              /* Stick to the very top of the page */
    left: 0;                             /* Align to the left edge */
    z-index: 1000;                       /* Ensure the nav bar stays above other elements */
}

.topbar-title {
    flex: 1;                             /* Allow the nav title to fill available horizontal space */
}

/* =========================== BANNER SECTION =========================== */
.banner {
    position: relative;
    width: 100vw;
    height: 320px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
    margin-bottom: 2.5rem;
}

.banner-photo {
    width: 100vw;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    z-index: 1;
    position: absolute;
    top: 0; left: 0;
}

.banner-overlay {
    background: var(--overlay-black);
    width: 100vw;
    height: 100%;
    position: absolute;
    top: 0; left: 0;
    z-index: 2;
}

.banner-text {
    position: absolute;
    right: 8vw;
    top: 50%;
    transform: translateY(-50%);
    z-index: 3;
    text-align: right;
    color: var(--moss);
    max-width: 410px;
}

.banner-text h1 {
    margin: 0 0 0.2em 0;
    font-size: 2.5em;
    color: var(--sand);
    text-shadow: 0 2px 6px #111a;
}

.banner-text h2 {
    margin: 0 0 0.25em 0;
    font-weight: 400;
    color: var(--forest);
    font-size: 1.45em;
    letter-spacing: 0.01em;
}

.banner-text p {
    font-size: 1.13em;
    margin: 0 0 1.2em 0;
    color: var(--moss);
    text-shadow: 0 2px 8px #111a;
}

.resume-btn {
    padding: 0.7em 2.1em;
    background: var(--forest);
    color: var(--pine);
    border: none;
    border-radius: 2em;
    font-size: 1em;
    font-weight: bold;
    text-decoration: none;
    box-shadow: 0 2px 8px #1115;
    transition: background 0.2s, color 0.2s;
    cursor: pointer;
}

.resume-btn:hover {
    background: var(--pine);
    color: var(--forest);
}

/* ==== "About Me" Bar ==== */
.about-me-section {
    width: 100vw;
    margin: 0;
    padding: 0;
    background: var(--gray15);   /* Your dark 15% gray background */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

/* ABOUT ME HEADING - All caps, sand, "touching" the bar */
.about-me-heading {
    color: var(--sand);
    font-family: 'Raleway', Arial, sans-serif;
    font-size: 2.4rem;
    font-weight: 800;
    letter-spacing: 0.13em;
    margin: 0;
    margin-top: 2.3rem;       /* space from previous section */
    margin-bottom: -0.7rem;   /* negative margin "pulls" it onto the bar */
    z-index: 2;
    text-align: left;
    background: none;
    position: relative;
    width: 100vw;
    max-width: 800px;
    padding-left: 2rem;
    box-sizing: border-box;
    /* No background so sand letters seem to "grow from" the bar */
}

/* ABOUT ME BAR - full width, sand color */
.about-me-bar {
    width: 100vw;
    background: var(--sand);
    padding: 2.2rem 0 2.2rem 0;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-radius: 0;
    box-shadow: none;
    z-index: 1;
    border-top: 1px solid rgba(0,0,0,0.07);   /* optional: subtle border */
    border-bottom: 1px solid rgba(0,0,0,0.07);
    margin: 0;
}

/* Content inside the bar */
.about-me-content {
    width: 100%;
    max-width: 800px;
    padding: 0 2rem;
    background: none;
    margin: 0 auto;
    text-align: left;
}

.about-me-content p {
    color: var(--pine);           /* Use pine for strong contrast on sand */
    line-height: 1.7;
    font-size: 1.13em;
    margin-bottom: 1.15em;
    margin-top: 0;
    background: none;
}

@media (max-width: 600px) {
    .about-me-heading,
    .about-me-content {
        padding-left: 0.7rem;
        padding-right: 0.7rem;
        max-width: 98vw;
    }
    .about-me-heading {
        font-size: 1.3rem;
        margin-top: 1.1rem;
    }
    .about-me-bar {
        padding: 1.1rem 0;
    }
}
